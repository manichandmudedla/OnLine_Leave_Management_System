<body class=" row" style="background-image:url(./static/bgImg.webp);background-size:cover;">
    <div class="col-xs col-sm-8 col-md-6  mt-5 mb-4 mx-auto p-4 " style=" background-color: rgb(77, 69, 132); border-radius:20px; box-shadow: rgba(0, 0, 0, 0.4) 0px 30px 90px; ">
        <div class="row mb-3 overflow-hidden">
        <img src="./static/img.webp" alt="This is Img" style="width:100vw;" >
        </div>
        <div class="d-flex row">
            <div class="col-xs col-sm-12 col-md-6 col-xl-6 mx-auto overflow-hidden">
                <div class="h3 text-center p-1 rounded" style="background-color: rgb(231, 231, 15);">Forgot Password</div>
                <form id="formId" method="post" action="/forgotPassword">
                    <div class="p-2">
                        <label for="tlogin" class="form-label text-white">Type of Login:</label>
                        <select class="form-select" name="TLogin" id="tlogin">
                            <option value="student">Student</option>
                            <option value="faculty">Faculty</option>
                            <option value="hod">HOD</option>
                            <option value="director">Director</option>
                            <option value="admin">Admin</option>
                        </select>
                    </div>
                    <div class="form-floating  p-2 mb-2">
                    <input type="text" class="form-control" id="user" name="user" placeholder="User Id" autocomplete="off" required><label for="user" class="form-label p-3" >User Id</label>
                    </div>
                    <div id="msg"></div>
                    <input type="submit" value="Submit" onclick="newUrl()" class="btn btn-md w-50 btn-primary mx-auto d-block "/>
                </form>
            </div>
        </div>
    </div>
